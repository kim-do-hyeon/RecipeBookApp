<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_background">

    <TextView
        android:id="@+id/TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요리 이름"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/IngredientsTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="재료"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Ingredient1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 재료 1"
                android:textSize="14sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/Ingredient1QuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1개"
                android:textSize="14sp"
                android:gravity="end" />

            <Button
                android:id="@+id/PurchaseButton1"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="구매"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Ingredient2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 재료 2"
                android:textSize="14sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/Ingredient2QuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2개"
                android:textSize="14sp"
                android:gravity="end" />

            <Button
                android:id="@+id/PurchaseButton2"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="구매"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <!-- 추가 재료와 버튼을 위한 LinearLayout 추가 -->

    </LinearLayout>

    <TextView
        android:id="@+id/RecipeTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="레시피"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/RecipeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- 레시피 단계 1"
        android:textSize="14sp"
        android:paddingLeft="16dp" />

    <TextView
        android:id="@+id/RecipeTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- 레시피 단계 2"
        android:textSize="14sp"
        android:paddingLeft="16dp" />

    <!-- 추가 레시피 TextView 추가 -->

</LinearLayout>
