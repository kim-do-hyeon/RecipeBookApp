<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닭 볶음탕"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/IngredientsTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="재료"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Ingredient1TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- 김치"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Ingredient1QuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1그릇"
                android:textSize="14sp"
                android:gravity="end" />

            <Button
                android:id="@+id/PurchaseButton1"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:text="구매"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Ingredient2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- 베이컨"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Ingredient2QuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="3장"
                android:textSize="14sp" />

            <Button
                android:id="@+id/PurchaseButton2"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:text="구매"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Ingredient3TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- 대파"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Ingredient3QuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="1개"
                android:textSize="14sp" />

            <Button
                android:id="@+id/PurchaseButton3"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:text="구매"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Ingredient4TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- 달걀"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Ingredient4QuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="2개"
                android:textSize="14sp" />

            <Button
                android:id="@+id/PurchaseButton4"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:text="구매"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Ingredient5TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- 식용유"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Ingredient5QuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="약간"
                android:textSize="14sp" />

            <Button
                android:id="@+id/PurchaseButton5"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:text="구매"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Ingredient6TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- 간장"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Ingredient6QuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="1스푼"
                android:textSize="14sp" />

            <Button
                android:id="@+id/PurchaseButton6"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:text="구매"
                android:textAlignment="center"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/RecipeTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="레시피"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/RecipeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="- 레시피 단계 1"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/RecipeTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="- 레시피 단계 2"
        android:textSize="14sp" />

    <!-- 추가 레시피 TextView 추가 -->

</LinearLayout>
